<script is:inline>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        const el = entry.target;

        // Fade in up
        if (el.classList.contains('fade-up-on-scroll')) {
          el.classList.add('animate-fade-in-up');
        }

        // Slide in from left
        if (el.classList.contains('slide-in-left-on-scroll')) {
          el.classList.add('animate-slide-in-left');
        }

        // Slide in from right
        if (el.classList.contains('slide-in-right-on-scroll')) {
          el.classList.add('animate-slide-in-right');
        }

        // Hvis du vil køre det igen hver gang det bliver synligt, så kommenter denne linje ud:
        //observer.unobserve(el);
      }
    });
  });

  // Saml alle de relevante selectors her:
  document
    .querySelectorAll('.fade-up-on-scroll, .slide-in-left-on-scroll, .slide-in-right-on-scroll')
    .forEach((el) => {
      observer.observe(el);
    });
</script>

<style>
