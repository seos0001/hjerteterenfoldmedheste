---
const logoUrl = "/logo.png"; // Indsæt vores hest/logo
---

<header class="flex flex-col justify-between items-center bg-amber-100 p-4">
  <!-- Logo til venstre -->
  <div class="flex justify-between w-full">
    <a href="/" class="flex items-center">
      <img src={logoUrl} alt="Logo" class="h-10">
    </a>
    
    <!-- Navigationsknapper til højre -->
    <div class="flex space-x-4 font-serif italic hover:underline">
      <button>OM OS</button>
      <button>KØB</button>
      <button>STØT</button>
    </div>
  </div>
  
  <!-- Bunden af headeren: Tynd lyserød, tykkere blå og tynd gul streg -->
  <div class="w-full mt-4">
    <div class="w-full border-b-2 border-pink-300">
      <div class="w-full border-b-4 border-blue-500">
        <div class="w-full border-b-2 border-yellow-300"></div>
      </div>
    </div>
  </div>
</header>


